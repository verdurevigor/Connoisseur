@model IEnumerable<TheConnoisseur.Models.Author>

@if (Model.Count() == 0)
{
    <h4>No author results were found.</h4>
}
else
{ 
<div class="row">

    @foreach (var item in Model)
    {
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="pull-left col-sm-6">
                        <img src="@item.AvatarPath" alt="Author Avatar" />
                        <br />
                        <br />
                        @item.FirstName @item.LastName
                        <br />
                        AKA: @Html.ActionLink(item.UserName, "FriendProfile", "Authors", new { friendID = item.Id }, null)
                    </div>
                    <div class="pull-left col-sm-6">
                        @item.City, @item.State
                        <br />
                        <b>Current Favorite:</b>
                        <br />
                        @item.FavItem
                        <hr />
                        "@item.Tagline"
                        <br />
                        <br />
                        @Html.Action("AddNewFriendButton", "Authors", new { friendID = item.Id })
                        @Html.Action("AcceptNewFriendButton", "Authors", new { friendID = item.Id })
                    </div>
                </div>
            </div>
        </div>

    }

</div>
    
}