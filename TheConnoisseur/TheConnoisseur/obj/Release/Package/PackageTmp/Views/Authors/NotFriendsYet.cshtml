@model TheConnoisseur.Models.Author

@{
    ViewBag.Title = "New Friends?";
}

<h2>Private Profile</h2>
<span class="h3 text-info">@TempData["BefriendResultMessage"]</span>
<p>You must add @Model.UserName as a friend in order to see their profile and journals.</p>

@Html.ActionLink("Befriend Connoisseur", "RequestFriendship", "Authors", new { @id = @Model.Id }, new { @class = "btn btn-primary" }) @Html.Action("AcceptNewFriendButton", "Authors", new { friendID = Model.Id })