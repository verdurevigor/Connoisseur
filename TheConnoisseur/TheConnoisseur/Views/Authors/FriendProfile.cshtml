@model TheConnoisseur.Models.Author

@{
    ViewBag.Title = Model.UserName +"'s Profile";
}

<h2>Connoisseur Info</h2>
@Html.Action("AddNewFriendButton", "Authors", new { friendID = Model.Id })
<span class="h3 text-info">@TempData["BefriendResultMessage"]</span>
<!-- Author profile summary -->
<div class="row panel">
    <div class="col-md-4 col-sm-12">
        @Html.DisplayFor(model => model.UserName) <br />
        @Html.DisplayFor(model => model.City), @Html.DisplayFor(model => model.State) <br />
        Connoisseur Since: @Html.DisplayFor(model => model.DateCreated)
    </div>
    <div class="col-md-4 col-sm-12">
        @Html.DisplayNameFor(model => model.FavItem): @Html.DisplayFor(model => model.FavItem) <br />
        @Html.DisplayNameFor(model => model.Tagline): @Html.DisplayFor(model => model.Tagline)
    </div>
    <div class="col-md-4 col-sm-12">
        <img src="@Model.AvatarPath" />     @* TODO: manage image loading, enhance avatar capabilities! *@
    </div>
</div>

<hr />
<p>@Html.ActionLink("View All Connoisseur Friends", "AllTheirFriends", "Authors", new { authorID = Model.Id }, new { @class = "btn btn-success" })</p>
@Html.Action("FriendsList", new { authorId = Model.Id })

@* TODO: make sure the parameter in this link gets passed correctly *@
<p>@Html.ActionLink("Read " + Model.UserName + "'s Beer Journal", "FriendBeerJournal", "Beers", new { friendID = Model.Id }, new { @class = "btn btn-success" })</p>
@Html.Action("BeersList", new { authorId = Model.Id })

<p>@Html.ActionLink("Read " + Model.UserName + "'s Coffee Journal", "FriendCoffeeJournal", "Coffees", new { friendID = Model.Id }, new { @class = "btn btn-success" })</p>
@Html.Action("CoffeesList", new { authorId = Model.Id })