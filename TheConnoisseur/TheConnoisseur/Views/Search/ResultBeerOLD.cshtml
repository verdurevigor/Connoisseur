@model IEnumerable<TheConnoisseur.Models.Beer>

<div class="row">

    @foreach (var item in Model)
    {
        <div class="col-md-4 col-sm-6">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="pull-left col-sm-6">
                        <img src="@item.Journal.ImagePath" alt="Beer Icon" />
                        <br />
                        @item.Journal.Title
                        by @item.Journal.Maker
                        <br />
                        Author: @Html.ActionLink(item.Journal.Author.UserName, "FriendProfile", "Author", new { @friendID = @item.Journal.Author.Id })
                    </div>
                    <div class="pull-left col-sm-6">
                        <b>Rating:</b> @item.Journal.Rating
                        <br />
                        <b>ABV:</b> @item.Abv
                        <br />
                        @item.Journal.Description
                        <br />
                        <a href="@Url.Action("BeerJournals", "Beers")#@item.BeerID" class="btn btn-default btn-block">Read</a>
                    </div>
                </div>
            </div>
        </div>
    }

</div>